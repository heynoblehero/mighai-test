# Multi-stage build for production
FROM node:20-alpine AS builder

WORKDIR /app

# Install build dependencies for native modules
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./
RUN npm ci --omit=dev && npm cache clean --force

# Copy source code
COPY . .

# Build the application
RUN npm run build 2>/dev/null || echo "No build script found, skipping..."

# Production stage
FROM node:20-alpine AS production

# Install runtime dependencies for native modules
RUN apk add --no-cache python3 make g++

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nextjs -u 1001

WORKDIR /app

# Install production dependencies
COPY package*.json ./
RUN npm ci --omit=dev && npm cache clean --force

# Copy built application
COPY --from=builder --chown=nextjs:nodejs /app ./

# Create directories with proper permissions for database and uploads
RUN mkdir -p data uploads logs && \
    chown -R nextjs:nodejs data uploads logs && \
    chmod -R 755 data uploads logs

# Install wget for health checks and sqlite3 for database testing
RUN apk add --no-cache wget sqlite

# Create a simple database initialization and startup script BEFORE switching users
RUN echo '#!/bin/sh' > entrypoint.sh && \
    echo 'echo "🚀 Starting SaaS Application..."' >> entrypoint.sh && \
    echo 'echo "🌐 Domain: $DOMAIN"' >> entrypoint.sh && \
    echo 'echo "📧 Admin: $ADMIN_EMAIL"' >> entrypoint.sh && \
    echo '# Set up database directory' >> entrypoint.sh && \
    echo 'mkdir -p /app/data' >> entrypoint.sh && \
    echo 'cd /app' >> entrypoint.sh && \
    echo '# Check database file' >> entrypoint.sh && \
    echo 'echo "🔍 Checking for database file..."' >> entrypoint.sh && \
    echo 'if [ ! -f ./site_builder.db ]; then' >> entrypoint.sh && \
    echo '  echo "⚠️ Database not found, creating empty one..."' >> entrypoint.sh && \
    echo '  touch ./site_builder.db' >> entrypoint.sh && \
    echo 'fi' >> entrypoint.sh && \
    echo 'echo "🗄️  Database status:"' >> entrypoint.sh && \
    echo 'ls -la ./site_builder.db || echo "Database file not found"' >> entrypoint.sh && \
    echo 'echo "DATABASE_URL: $DATABASE_URL"' >> entrypoint.sh && \
    echo 'echo "🚀 Starting Node.js application..."' >> entrypoint.sh && \
    echo 'exec node server.js' >> entrypoint.sh && \
    chmod +x entrypoint.sh && \
    chown nextjs:nodejs entrypoint.sh

USER nextjs

EXPOSE 3000

HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000/api/health || exit 1

CMD ["./entrypoint.sh"]