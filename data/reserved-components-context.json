      "security_features": "Authentication checks, session management"
    },
    "can_edit": {
      "styling": "Colors, fonts, spacing, visual design",
      "content": "Text content, labels, help text",
      "component_styling": "Individual component appearance",
      "custom_sections": "Additional content areas within allowed zones"
    },
    "limited_edit": {
      "component_configuration": "Some component settings within allowed parameters",
      "content_organization": "Order of sections within customizable areas",
      "optional_features": "Enable/disable non-critical features"
    }
  },
  "integration_points": {
    "layout_to_components": {
      "description": "How layout wraps and positions components",
      "sidebar_integration": "Sidebar automatically included in subscriber pages",
      "chat_integration": "Support widget available on all subscriber pages", 
      "content_injection": "Main content area populated by page-specific components"
    },
    "component_communication": {
      "auth_flow": "All components check authentication status",
